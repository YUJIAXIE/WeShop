@model IEnumerable<Notice>
@{
    ViewBag.Title = "公告列表";
    Layout = "~/Views/_LayoutMaster.cshtml";
}

<div class="ftop">
    <a class="back" onClick="javascript:history.back(-1);"><img src="~/Content/images/icon_03.png"></a>
    <h2>最新公告</h2>
    <a class="comea">&nbsp;</a>
    <div style="clear: both;"></div>
</div>
<!--ftop开始-->
<div class="notice">
    <ul>
        @foreach (var notice in Model)
        {
            <li>
                <a href="@Url.Action("NoticeDetails","Notice",new { id=notice.Id})">
                    <h2><span>@notice.Title</span><i>@notice.ModiTime</i></h2>
                    <p>@notice.Body</p>
                </a>
            </li>
        }
    </ul>
</div>

@section Style
{
    <link href="~/Content/css/index.css" type="text/css" rel="stylesheet">
}
@section Script
{
    <script src="~/Scripts/index.js" type="text/javascript"></script>
}